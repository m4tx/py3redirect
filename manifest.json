{
  "manifest_version": 2,
  "name": "py3redirect",
  "description": "Automatically redirects to Python 3 documentation when Python 2 docs page is requested",
  "author": "Mateusz \"m4tx\" MaÄ‡kowski",
  "version": "1.2",
  "icons": {
    "64": "icon.png",
    "128": "icon128.png"
  },

  "page_action": {
    "default_icon": "icon.png",
    "default_title": "Python 3 docs page",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": [
      "browser-wrapper.js",
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["https://docs.python.org/*"],
      "js": [
        "browser-wrapper.js",
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],

  "permissions": [
    "*://docs.python.org/*",
    "activeTab",
    "webRequest",
    "webRequestBlocking",
    "storage"
  ]
}
